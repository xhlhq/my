.more-item {
  width: 100%;
  padding: 0 10rpx;
}
.more-title {
  padding: 20rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.more-title text {
  font-weight: 700;
}
.more-content {
  display: flex;
  flex-wrap: wrap;
  justify-content: left;
  align-content: center;
}
.more-content-item {
  width: 23%;
  margin-right: 1%;
  margin-bottom: 10rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}
.item-img {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}
.item-status {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  border-radius: 10rpx;
  font-size: 22rpx;
  color: #fff;
}
