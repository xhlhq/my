page {
  background-color: #eee;
}
#approval {
  width: 100%;
  margin: 0;
  padding: 0;
}
.section1,
.section2,
.section3,
.section4,
.section5 {
  box-sizing: border-box;
  width: 100%;
  background-color: #fff;
  padding: 1rpx 20rpx;
  margin-bottom: 20rpx;
}
.item {
  box-sizing: border-box;
  width: 100%;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
}
.picker {
  width: 100%;
  height: 100%;
  color: #808080;
}
.pickerValue {
  color: #000;
}
.itemValue {
  flex: 1;
  text-align: right;
}
.areaItem {
  padding: 10rpx 0;
}
.areaValue {
  padding: 10rpx 0;
}

.submitBtn {
  width: 100%;
  background-color: #07c507;
  color: #fff;
}